{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2022",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "strict": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "types": ["node","express"],
        "typeRoots": [
            "node_modules/@types",
            "./src/types/"
        ]
    },

    "include": ["./src/**/*"],
    "exclude": ["node_modules","dist"]
}